<!-- start head nav  -->

<div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
    <div class="title-bar-right"><a href="/home">Campifi</a>
    </div>
</div>

<div class="top-bar" id="example-menu">
    <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
            <li class="menu-text"><a href="/home">Campifi</a></li>
            <li><a href="/home"><i class="fi-trees topNavIcon hide-for-small-only"></i> <span>Home</span></a></li>
            <li><a href="/site_add"><i class="fi-plus topNavIcon hide-for-small-only"></i> <span>Add Site</span></a></li>
            <li><a href="/favorite"><i class="fi-star topNavIcon hide-for-small-only"></i> <span>Favorites</span></a></li>
            <li><a href="/logout"><i class="fi-x topNavIcon hide-for-small-only"></i> <span>Log Out</span></a></li>
        </ul>
    </div>
</div>
<!-- end head nav  -->
<div class="row descBg">
    <div class="small-12 large-12 text-center columns">
        <h3>{{site.name}}</h3>
        <img src= {{site.image}}>
        <p>{{site.description}}</p>
        <h4> Submitted by - {{site.username}}</h4>

    </div>
</div>
<br>
<div class="row">
    <div class="small-12 large-12 text-center columns">
        {{#if permission}}
            <button class="detailBtn2" type="button" name="edit"><a href="/campsite/edit/{{site.id}}">EDIT</a></button>
            <button class="detailBtn2"  type="button" name="delete"><a href="/campsite/delete/{{site.id}}">DELETE</a></button>
            <button class="detailBtn2"  type="button" name="favorite"><a href="/favorite/{{site.id}}">FAVORITE</a></button>
        {{else}}
            <button class="detailBtn2"  type="button" name="favorite"><a href="/favorite/{{site.id}}">FAVORITE</a>
        {{/if}}
    </div>

</div>
{{#each comment}}
    <div class="row ">
        <hr>
      <div class="small-12 large-12 text-center columns descBg">
            <p>{{this.message}} - <i>{{this.username}}</i></p>
        </div>
    </div>
{{/each}}
<form class="" action="/campsite/comment/{{site.id}}" method="post">
    <div class="row">
        <div class="medium-6 medium-centered columns">
            <label for="message" class='text-center'>Comment:
                <textarea name="message" rows="8" cols="40" placeholder="Comment Here!">
                </textarea>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="small-12 large-12 text-center columns">
            <input type="hidden" name="camper_id" placeholder="camper_id" value="{{id}}">
        </div>
        <input type="hidden" name="site_id" value="{{site.id}}">
    </div>
    <div class="small-12 large-12 text-center columns">
        <button class="detailBtn2" type="submit">Post Comment</button>
    </div>
</form>
<br>
<br>
