    <h3>{{site.name}}</h3>
    <img src={{site.image}}>
    <p>{{site.description}}</p>
    <h4> by {{site.username}}</h4><br>

{{#if permission}}
    <button type="button" name="edit"><a href="/campsite/edit/{{site.id}}">EDIT</a></button>
    <button type="button" name="delete"><a href="/campsite/delete/{{site.id}}">DELETE</a></button>
    <button type="button" name="favorite"><a href="/favorite/{{site.id}}">FAVORITE</a></button>
{{else}}
    <button type="button" name="favorite"><a href="/favorite/{{site.id}}">FAVORITE</a>
{{/if}}

{{#each comment}}
    <p>{{this.message}} - <i>{{this.username}}</i></p>
{{/each}}

<form class="" action="/campsite/comment/{{site.id}}" method="post">
    <div class="row">
        <div class="medium-6 medium-centered columns">
            <label for="message" class='text-center'>Comment:
                <textarea name="message" rows="8" cols="40" placeholder="Comment Here!">
                </textarea>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="medium-6 medium-centered columns">
            <input type="hidden" name="camper_id" placeholder="camper_id" value="{{id}}">
        </div>
          <input type="hidden" name="site_id" value="{{site.id}}">
    </div>
    <div class="medium-6 text-center columns">
      <button type="submit">Post Comment</button>
    </div>
</form>
